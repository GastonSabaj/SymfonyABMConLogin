{% extends 'base.html.twig' %}

{% block navbar %}
    {% include 'navbar.html.twig' %}
{% endblock %}

{% block body %}

    <title>{% block title %}List of products{% endblock %}</title>

    <div class="container-fluid" style="margin-top: 100px;">

        {# Show success messages #}
        {% for flashMessage in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {# Show error messages #}
        {% for flashMessage in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-3xl font-bold"> <i class="fa fa-list" aria-hidden="true"></i> List of products</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="tablaPacientes">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titulo</th>
                                <th>Description</th>
                                <th>CÃ³digo</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in pagination %}
                                <tr>
                                    <td>{{ product.id }}</td>
                                    <td>{{ product.titulo }}</td>
                                    <td>{{ product.descripcion }}</td>
                                    <td>{{ product.codigo }}</td>
                                    <td>
                                        <a class="btn btn-primary" href="{{ path('app_producto_show', {'id': product.id }) }}" class="btn btn-info">Show </a>
                                        <a class="btn btn-primary" href="{{ path('app_producto_edit', {'id': product.id }) }}" class="btn btn-warning">Edit</a>
                                        {{ include('producto/_delete_form.html.twig') }} 
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">Records not found.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Custom pagination #}
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item {% if pagination.getCurrentPageNumber() == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('app_producto_index', {'page': pagination.getCurrentPageNumber() - 1}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {% for page in 1..pagination.pageCount %}
                    <li class="page-item {% if page == pagination.getCurrentPageNumber() %}active{% endif %}">
                        <a class="page-link" href="{{ path('app_producto_index', {'page': page}) }}">{{ page }}</a>
                    </li>
                {% endfor %}
                <li class="page-item {% if pagination.getCurrentPageNumber() == pagination.pageCount %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('app_producto_index', {'page': pagination.getCurrentPageNumber() + 1}) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        {# End custom pagination #}



        <a href="{{ path('app_producto_new') }}" class="btn btn-success mt-4">Create a new product</a>
    </div>
{% endblock %}

{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %}
