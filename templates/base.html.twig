        {% block javascripts %}
            <!-- 
                Este script es para que todo aquel tag que contenga como atributo a data-bs-toggle="popover", le va a habilitar el popover
                Características: 
                -El popover no desaparece a menos que vuelvas a apretar el botón!
            -->
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
                    var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                        return new bootstrap.Popover(popoverTriggerEl);
                    });
                });

            {# Esto se usa para que si clickeo en otro lado, se vaya el pop-over #}
            $('.popover-dismiss').popover({
                trigger: 'focus'
            })
            </script>
